<% form_for(@critic) do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :movie_id %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 6 %>
  </div>
  <div class="actions">
    <%= f.label :score %><br />
    <%= f.select :score, (0..20).to_a, :include_blank => TRUE %> / 20
&nbsp;&nbsp;&nbsp;&nbsp;
<% if params[:return_to] %>
<input type="hidden" name="return_to" value="<%= params[:return_to] -%>" />
<% end %>
    <%= f.submit %>
  </div>
<% end %>
