<% form_for(@critic) do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :movie_id %>
  <div class="field">
    <%= f.label :content, :text => "Critic" %><br />
    <%= f.text_area :content, :rows => 5 %>
  </div>
  <div class="actions">
    <%= f.label :score %><br />
    <%= f.select :score, (0..20).to_a, :include_blank => TRUE %> / 20
&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.submit %>
  </div>
<% end %>
