<!DOCTYPE html>
<html>
<head>
  <title>Movies: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'movies' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
<style type="text/css" media="screen">
	#logo a:hover{text-decoration:none;}
	#menu>a {padding:5px;}
</style>
</head>
<body>
<div id="container">
	<div id="menu" style="float:right">
		
		<a href="/movies/new" id="new">New movie</a> 
		<a href="/movies" id="list">Movies</a>
		<a href="/critics" id="list">Critics</a>
		&nbsp;
		|
		&nbsp;
		<% if current_user %>
			<%= current_user.username -%>
		    <%= link_to "Edit Profile", edit_user_path(:current) %> 
		    <%= link_to "Logout", logout_path %>
		  <% else %>
		    <%= link_to "Register", new_user_path %> 
		    <%= link_to "Login", login_path %>
		  <% end %>
	</div>
<div id="logo"><a href="/"><img src="/images/logo.png" alt="HDMovies" /></a></div>
<% if notice %>
<p class="notice"><%= notice %></p>
<% end %>
<div class="content">
	<br>
<%= yield %>
</div>
</div>
</body>
</html>
