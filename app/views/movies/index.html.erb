<table width="100%">
  <tr>
	<th></th>
    <th>Title</th>
    <th>Imdb</th>
    <th>Quality</th>
    <th>Languages</th>
    <th>Subs</th>
    <th>Cast</th>
    <th>Director</th>
    <th>Size</th>
    <th>Format</th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
	<td>
	<% if movie.photo_file_name %>
	<%= image_tag(movie.photo.url(:xsmall), :alt => movie.title) %> 
	<% else %>
	no pic
	<% end %>
	</td>
    <td><strong><%= link_to movie.title, movie_path(movie) %></strong></td>
    <td><%= link_to movie.imdb_score, movie.url_imdb %></td>
    <td><%= movie.quality %></td>
    <td><%= movie.languages %></td>
    <td><%= movie.subs %></td>
    <td><%= movie.cast %></td>
    <td><%= movie.director %></td>
    <td><%= movie.size %></td>
    <td><%= movie.format %></td>
<!--     <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
 -->  </tr>
<% end %>
</table>
